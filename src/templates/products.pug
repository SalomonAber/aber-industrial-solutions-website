section#products
	.wrapper
		h2= products.name
		ul
			each product in products.products
				li
					a(href=('#' + product.id))=product.name
		each product in products.products
			section(id=product.id)
				.text
					h3=product.name
					each paragraph in product.description
						p=paragraph
					ul
						each point in product.points
							li=point
					.technologies
						h4=products.listitle
						ul
							each technology in product.technologies
								li=technology

				.products
					.products-container
						each slide in product.slides
							.products-slide
								img(data-lazy=require('../images/products/' + slide.id + '.png').default alt=slide.alt)
			hr
